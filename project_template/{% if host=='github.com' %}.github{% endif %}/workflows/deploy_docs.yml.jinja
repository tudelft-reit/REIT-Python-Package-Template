name: Deploy to GitHub Pages

on:
  push:
    branches:
      - main  # Replace 'main' with your default branch name if necessary

jobs:
  deploy:
    runs-on: ubuntu-24.04
    permissions:
      contents: write
    steps:
      - name: Checkout code
        uses: actions/checkout@v4

      {% if environment_manager=='pixi' -%}
      - name: Install Pixi
        uses: prefix-dev/setup-pixi@v0.9.2
        with:
          pixi-version: v0.55.0
      {%- elif environment_manager=='uv' -%}
      - name: Install the latest version of uv
        uses: astral-sh/setup-uv@v7
        with:
          version: latest
      {%- endif %}

      - name: Install the project and its dependencies
        {% if environment_manager=='pixi' -%}
        run: pixi install -e dev
        {%- elif environment_manager=='uv' -%}
        run: uv sync
        {%- endif %}

      - name: Build and deploy with mkdocs
        {% if environment_manager=='pixi' -%}
        run: pixi run -e dev mkdocs gh-deploy --force
        {%- elif environment_manager=='uv' -%}
        run: uv run mkdocs gh-deploy --force
        {%- endif %}
